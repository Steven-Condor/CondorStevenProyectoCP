<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllyCliente.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="color0">#DF0B38</Color>
            <Color x:Key="color1">#A62E38</Color>
            <Color x:Key="color2">#D94E5A</Color>
            <Color x:Key="color3">#A3B7CE</Color>
            <Color x:Key="color4">#7EADBF</Color>
            <Color x:Key="color5">#B5343A</Color>
            <Color x:Key="color6">#5B5B5B</Color>

            <OnPlatform x:TypeArguments="x:String" x:Key="FontAwesomeRegular">
                <On Platform="Android" Value="FontAwesome5Free-Regular-400.otf#Regular"/>
            </OnPlatform>
            <OnPlatform x:TypeArguments="x:String" x:Key="FontAwesomeBrands">
                <On Platform="Android" Value="FontAwesome5Brands-Regular-400.otf#Brands"/>
            </OnPlatform>
            <OnPlatform x:TypeArguments="x:String" x:Key="FontAwesomeSolid">
                <On Platform="Android" Value="FontAwesome5Free-Solid-900.otf#Solid"/>
            </OnPlatform>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#DF0B38"/>
                <Setter Property="BarTextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>